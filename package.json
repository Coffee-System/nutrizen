{
  "name": "nutrizen",
  "version": "1.0.0",
  "description": "NutriZen monorepo (web + shared packages)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=apps/web",
    "build:packages": "npm run build -w @nutrizen/types -w @nutrizen/constants -w @nutrizen/ui -w @nutrizen/components -w @nutrizen/tokens",
    "build:all": "npm run build:packages && npm run build",
    "dev": "npm run dev --workspace=apps/web",
    "dev:packages": "npm run dev --workspaces --include=packages/*",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "lint:check": "eslint \"**/*.{ts,tsx,js,jsx}\" --max-warnings 0",
    "typecheck": "tsc -b --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,js,jsx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,js,jsx}\"",
    "validate": "npm run lint:check && npm run typecheck && npm run format:check",
    "check": "npm run validate",
    "clean": "rimraf node_modules packages/*/dist apps/*/.next",
    "fresh": "npm run clean && npm install"
  },
  "keywords": [],
  "author": "Coffee System",
  "repository": {
    "type": "git",
    "url": "https://github.com/Coffee-System/nutrizen.git"
  },
  "bugs": {
    "url": "https://github.com/Coffee-System/nutrizen/issues"
  },
  "homepage": "https://nutrizen.dev",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/eslintrc": "^3.3.1",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "zod": "^3.25.76"
  }
}
